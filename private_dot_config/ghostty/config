# Theme
theme = tokyonight_moon

# GTK
gtk-titlebar-hide-when-maximized = true

# Window
window-padding-x = 0
window-padding-y = 0
window-width = 128
window-height = 35
window-padding-balance = true

# Background
background-opacity = 0.9

# Cursor
cursor-style = block
shell-integration-features = no-cursor

# Fonts
font-size = 13

# Keybindings (Conflicting with Gnome)
keybind = ctrl+alt+up=goto_split:up
keybind = ctrl+alt+down=goto_split:down
keybind = ctrl+alt+left=goto_split:left
keybind = ctrl+alt+right=goto_split:right

keybind = ctrl+alt+h=new_split:right
keybind = ctrl+alt+v=new_split:down
