# Theme
theme = TokyoNight Moon

# Shell integration
shell-integration = fish

# Cursor
cursor-style = block
shell-integration-features = no-cursor

# Fonts
{{- if hasKey . "terminal_font_size" }}
font-size = {{ .terminal_font_size }}
{{- end }}
font-family = Adwaita Mono

# Window
window-padding-balance = true
